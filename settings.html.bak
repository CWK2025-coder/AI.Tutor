      // 慣性滑動
      function applyGradeInertia(velocity) {
        const deceleration = 0.0015;
        const direction = velocity > 0 ? 1 : -1;
        let distance = 0;
        let duration = Math.abs(velocity / deceleration);
        
        // 計算慣性滑動的距離
        distance = (velocity * velocity) / (2 * deceleration) * direction;
        
        const currentTranslateY = getGradePickerTranslateY();
        let targetTranslateY = currentTranslateY + distance;
        
        // 限制範圍
        const maxTranslateY = 50;
        const minTranslateY = -((gradePickerItems.length - 1) * 50 - 50);
        
        if (targetTranslateY > maxTranslateY) {
          targetTranslateY = maxTranslateY;
        } else if (targetTranslateY < minTranslateY) {
          targetTranslateY = minTranslateY;
        }
        
        // 使用CSS動畫實現慣性效果
        this.style.transition = `transform ${Math.min(duration, 1)}s cubic-bezier(0.23, 1, 0.32, 1)`;
        this.style.transform = `translateY(${targetTranslateY}px)`;
        
        // 動畫結束後對齊到最近的選項
        setTimeout(() => {
          this.style.transition = 'transform 0.3s ease';
          snapToGradeItem();
        }, Math.min(duration, 1) * 1000);
      }
      
      // 對齊到最近的選項
