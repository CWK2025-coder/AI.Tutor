          if (index === currentGradeIndex) {
            item.classList.add('active');
          } else {
            item.classList.remove('active');
          }
        });
      }
      
      // 更新年級選擇狀態
      function updateGradeSelection(grade) {
        gradePickerItems.forEach((item, index) => {
