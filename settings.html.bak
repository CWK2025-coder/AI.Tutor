    function getAgePickerTranslateY() {
      const transform = agePickerWheel.style.transform;
      if (!transform || transform === 'none') return 0;
      const match = transform.match(/translateY\(([^)]+)\)/);
      return match ? parseFloat(match[1]) : 0;
    }
    
    // 應用年齡滑輪慣性
    function applyAgeInertia(velocity) {
      const deceleration = 0.0015;
      const direction = velocity > 0 ? 1 : -1;
      let distance = 0;
      let duration = Math.abs(velocity / deceleration);
      
      // 計算慣性滑動的距離
      distance = (velocity * velocity) / (2 * deceleration) * direction;
      
      const currentTranslateY = getAgePickerTranslateY();
      let targetTranslateY = currentTranslateY + distance;
      
      // 限制範圍
      const maxItems = agePickerWheel.querySelectorAll('.picker-item').length;
      const maxTranslateY = 50;
      const minTranslateY = -((maxItems - 2) * 50);
      
      if (targetTranslateY > maxTranslateY) {
        targetTranslateY = maxTranslateY;
      } else if (targetTranslateY < minTranslateY) {
        targetTranslateY = minTranslateY;
      }
      
      // 使用CSS動畫實現慣性效果
      this.style.transition = `transform ${Math.min(duration, 1)}s cubic-bezier(0.23, 1, 0.32, 1)`;
      this.style.transform = `translateY(${targetTranslateY}px)`;
      
      // 動畫結束後對齊到最近的選項
      setTimeout(() => {
        this.style.transition = 'transform 0.3s ease';
        snapToAgeItem();
      }, Math.min(duration, 1) * 1000);
    }
    
    // 對齊到最近的年齡選項
    function snapToAgeItem() {
      const itemHeight = 50;
      const currentTranslateY = getAgePickerTranslateY();
      const targetIndex = Math.round(currentTranslateY / itemHeight) * -1 + 1;
      
      // 限制索引範圍
      const maxItems = agePickerWheel.querySelectorAll('.picker-item').length;
      currentAgeIndex = Math.max(0, Math.min(maxItems - 1, targetIndex));
      
      updateAgePickerPosition();
    }
    
    // 在更新頁面語言函數中添加年齡顯示更新
    const originalUpdatePageLanguage = updatePageLanguage;
    updatePageLanguage = function(lang) {
      originalUpdatePageLanguage(lang);
      
      // 更新年齡顯示
      const savedAge = localStorage.getItem('userAge') || '18';
      updateAgeDisplay(savedAge);
      
      // 如果年齡選擇器已初始化，更新年齡選項文本
      if (agePickerWheel.children.length > 0) {
        initAgeOptions();
        updateAgePickerPosition();
      }
    };
    
    // 個人資料編輯模態框
    document.addEventListener('DOMContentLoaded', function() {
      const profileBtn = document.querySelector('.profile-info');
      const profileModal = document.getElementById('profile-modal');
      const profileModalClose = document.getElementById('profile-modal-close');
      const profileModalCancel = document.getElementById('profile-modal-cancel');
      const profileModalSave = document.getElementById('profile-modal-save');
      const profileAgePickerWheel = document.getElementById('profile-age-picker-wheel');
      
      // 初始化年齡選項
      function initProfileAgeOptions() {
        profileAgePickerWheel.innerHTML = '';
        for (let i = 1; i <= 100; i++) {
          const ageOption = document.createElement('div');
          ageOption.className = 'picker-item';
          ageOption.setAttribute('data-age', i);
          
          // 根據當前語言設置顯示年齡文本
          const currentLang = document.documentElement.getAttribute('data-current-lang') || 'traditional';
          if (currentLang === 'english') {
            ageOption.textContent = i === 1 ? `${i} year old` : `${i} years old`;
          } else if (currentLang === 'simplified') {
            ageOption.textContent = `${i}岁`;
          } else {
            ageOption.textContent = `${i}歲`;
          }
          
          profileAgePickerWheel.appendChild(ageOption);
        }
      }
      
      // 年齡滑輪變量
      let profileAgeStartY = 0;
      let profileAgeMoveY = 0;
      let profileAgeLastMoveY = 0;
      let profileAgeStartTime = 0;
      let isProfileAgeScrolling = false;
      let currentProfileAgeIndex = 8; // 默認選中9歲 (索引從0開始)
      let profileAgeVelocityY = 0;
      let profileAgeAnimationId = null;
      
      // 更新年齡滑輪位置
      function updateProfileAgePickerPosition() {
        const itemHeight = 40;
        const translateY = (1 - currentProfileAgeIndex) * itemHeight;
        profileAgePickerWheel.style.transform = `translateY(${translateY}px)`;
        
        // 更新選中項樣式
        const ageItems = profileAgePickerWheel.querySelectorAll('.picker-item');
        ageItems.forEach((item, index) => {
          if (index === currentProfileAgeIndex) {
            item.classList.add('active');
          } else {
            item.classList.remove('active');
          }
        });
      }
      
      // 獲取年齡滑輪當前位置
      function getProfileAgePickerTranslateY() {
        const transform = profileAgePickerWheel.style.transform;
        if (!transform || transform === 'none') return 0;
        const match = transform.match(/translateY\(([^)]+)\)/);
        return match ? parseFloat(match[1]) : 0;
      }
      
      // 對齊到最近的年齡選項
      function snapToProfileAgeItem() {
        const itemHeight = 40;
        const currentTranslateY = getProfileAgePickerTranslateY();
        const targetIndex = Math.round(currentTranslateY / itemHeight) * -1 + 1;
        
        // 限制索引範圍
        const maxItems = profileAgePickerWheel.querySelectorAll('.picker-item').length;
        currentProfileAgeIndex = Math.max(0, Math.min(maxItems - 1, targetIndex));
        
        updateProfileAgePickerPosition();
      }
      
      // 應用年齡滑輪慣性
      function applyProfileAgeInertia(velocity) {
        const deceleration = 0.0015;
        const direction = velocity > 0 ? 1 : -1;
        let distance = 0;
        let duration = Math.abs(velocity / deceleration);
        
        // 計算慣性滑動的距離
        distance = (velocity * velocity) / (2 * deceleration) * direction;
        
        const currentTranslateY = getProfileAgePickerTranslateY();
        let targetTranslateY = currentTranslateY + distance;
        
        // 限制範圍
        const maxItems = profileAgePickerWheel.querySelectorAll('.picker-item').length;
        const maxTranslateY = 40;
        const minTranslateY = -((maxItems - 2) * 40);
        
        if (targetTranslateY > maxTranslateY) {
          targetTranslateY = maxTranslateY;
        } else if (targetTranslateY < minTranslateY) {
          targetTranslateY = minTranslateY;
        }
        
        // 使用CSS動畫實現慣性效果
        this.style.transition = `transform ${Math.min(duration, 1)}s cubic-bezier(0.23, 1, 0.32, 1)`;
        this.style.transform = `translateY(${targetTranslateY}px)`;
        
        // 動畫結束後對齊到最近的選項
        setTimeout(() => {
          this.style.transition = 'transform 0.3s ease';
          snapToProfileAgeItem();
        }, Math.min(duration, 1) * 1000);
      }
      
      // 年齡滑輪觸摸事件
      profileAgePickerWheel.addEventListener('touchstart', function(e) {
        profileAgeStartY = e.touches[0].clientY;
        profileAgeStartTime = Date.now();
        profileAgeLastMoveY = 0;
        profileAgeVelocityY = 0;
        isProfileAgeScrolling = true;
        
        if (profileAgeAnimationId) {
          cancelAnimationFrame(profileAgeAnimationId);
          profileAgeAnimationId = null;
        }
        
        this.classList.add('dragging');
        this.classList.remove('with-inertia');
        this.style.transition = 'none';
      });
      
      profileAgePickerWheel.addEventListener('touchmove', function(e) {
        if (!isProfileAgeScrolling) return;
        
        const currentY = e.touches[0].clientY;
        profileAgeMoveY = currentY - profileAgeStartY;
        
        // 計算速度
        const now = Date.now();
        const dt = now - profileAgeStartTime;
        if (dt > 0) {
          profileAgeVelocityY = (profileAgeMoveY - profileAgeLastMoveY) / dt;
        }
        profileAgeLastMoveY = profileAgeMoveY;
        profileAgeStartTime = now;
        
        const currentTranslateY = getProfileAgePickerTranslateY();
        const newTranslateY = currentTranslateY + profileAgeMoveY;
        
        // 限制範圍
        const maxItems = profileAgePickerWheel.querySelectorAll('.picker-item').length;
        const maxTranslateY = 40; // 頂部限制
        const minTranslateY = -((maxItems - 2) * 40); // 底部限制
        
        if (newTranslateY > maxTranslateY) {
          this.style.transform = `translateY(${maxTranslateY + (newTranslateY - maxTranslateY) * 0.2}px)`;
        } else if (newTranslateY < minTranslateY) {
          this.style.transform = `translateY(${minTranslateY + (newTranslateY - minTranslateY) * 0.2}px)`;
        } else {
          this.style.transform = `translateY(${newTranslateY}px)`;
        }
        
        profileAgeStartY = currentY;
      });
      
      profileAgePickerWheel.addEventListener('touchend', function(e) {
        if (!isProfileAgeScrolling) return;
        
        isProfileAgeScrolling = false;
        this.classList.remove('dragging');
        
        // 應用慣性
        if (Math.abs(profileAgeVelocityY) > 0.1) {
          this.classList.add('with-inertia');
          applyProfileAgeInertia.call(this, profileAgeVelocityY * 100);
        } else {
          this.style.transition = 'transform 0.3s ease';
          snapToProfileAgeItem();
        }
      });
      
      // 添加滑鼠滾輪事件支持
      profileAgePickerWheel.addEventListener('wheel', function(e) {
        e.preventDefault();
        
        // 計算滾動方向和距離
        const delta = e.deltaY;
        const currentTranslateY = getProfileAgePickerTranslateY();
        let newTranslateY = currentTranslateY - delta * 0.5; // 調整滾動速度
        
        // 限制範圍
        const maxItems = profileAgePickerWheel.querySelectorAll('.picker-item').length;
        const maxTranslateY = 40;
        const minTranslateY = -((maxItems - 2) * 40);
        
        if (newTranslateY > maxTranslateY) {
          newTranslateY = maxTranslateY;
        } else if (newTranslateY < minTranslateY) {
          newTranslateY = minTranslateY;
        }
        
        // 應用新位置
        this.style.transition = 'transform 0.3s ease';
        this.style.transform = `translateY(${newTranslateY}px)`;
        
        // 清除之前的定時器
        clearTimeout(this.wheelTimeout);
        
        // 設置新的定時器，在滾動停止後對齊到最近的選項
        this.wheelTimeout = setTimeout(() => {
          snapToProfileAgeItem();
        }, 200);
      });
      
      // 點擊選擇年齡
      profileAgePickerWheel.addEventListener('click', function(e) {
        if (e.target.classList.contains('picker-item')) {
          const age = parseInt(e.target.getAttribute('data-age'));
          currentProfileAgeIndex = age - 1;
          updateProfileAgePickerPosition();
        }
      });
      
      // 打開個人資料編輯模態框
      profileBtn.addEventListener('click', function() {
        initProfileAgeOptions();
        profileModal.classList.add('active');
        updateProfileAgePickerPosition();
      });
      
      // 關閉個人資料編輯模態框
      profileModalClose.addEventListener('click', function() {
        profileModal.classList.remove('active');
      });
      
      profileModalCancel.addEventListener('click', function() {
        profileModal.classList.remove('active');
      });
      
      // 保存個人資料
      profileModalSave.addEventListener('click', function() {
        // 獲取選中的年齡
        const selectedAge = currentProfileAgeIndex + 1;
        
        // 更新顯示的年齡
        const ageElement = document.querySelector('.profile-info-detail');
        const currentLang = document.documentElement.getAttribute('data-current-lang') || 'traditional';
        
        if (currentLang === 'english') {
          ageElement.textContent = selectedAge === 1 ? `${selectedAge} year old` : `${selectedAge} years old`;
        } else if (currentLang === 'simplified') {
          ageElement.textContent = `${selectedAge}岁`;
        } else {
          ageElement.textContent = `${selectedAge}歲`;
        }
        
        // 保存年齡設置到本地存儲
        localStorage.setItem('userAge', selectedAge.toString());
        
        // 關閉模態框
        profileModal.classList.remove('active');
      });
    });
  </script>
</body>
