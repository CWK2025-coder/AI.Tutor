    // 語言設置彈窗交互
    document.addEventListener('DOMContentLoaded', function() {
      const fontSetting = document.getElementById('font-setting');
      const fontModal = document.getElementById('font-modal');
      const modalClose = document.getElementById('modal-close');
      const modalCancel = document.getElementById('modal-cancel');
      const modalConfirm = document.getElementById('modal-confirm');
      const currentFont = document.getElementById('current-font');
      
      // 語言選擇滑輪
      const pickerWheel = document.querySelector('.picker-wheel');
      const pickerItems = document.querySelectorAll('.picker-item');
      let startY = 0;
      let moveY = 0;
      let lastMoveY = 0;
      let startTime = 0;
      let isScrolling = false;
      let currentIndex = 1; // 默認選中繁體中文
      let velocityY = 0;
      let animationId = null;
      
      // 添加滑動提示
      const languagePickerContainer = fontModal.querySelector('.language-picker');
      
      // 移除滑動提示代碼
      /*
      const topHint = document.createElement('div');
      topHint.className = 'scroll-hint scroll-hint-top';
      topHint.setAttribute('data-lang-key', 'scroll_up_hint');
      topHint.innerHTML = '<i class="fas fa-chevron-up"></i><span>上滑查看更多</span><i class="fas fa-chevron-up"></i>';
      
      const bottomHint = document.createElement('div');
      bottomHint.className = 'scroll-hint scroll-hint-bottom';
      bottomHint.setAttribute('data-lang-key', 'scroll_down_hint');
      bottomHint.innerHTML = '<i class="fas fa-chevron-down"></i><span>下滑查看更多</span><i class="fas fa-chevron-down"></i>';
      
      languagePickerContainer.appendChild(topHint);
      languagePickerContainer.appendChild(bottomHint);
      */
      
      // 檢查本地存儲中的語言設置
      const savedFont = localStorage.getItem('systemLang') || 'traditional';
      
      // 設置初始字體類
      document.body.classList.add('font-' + savedFont);
      
      // 設置HTML語言屬性
      if (savedFont === 'simplified') {
        document.documentElement.setAttribute('lang', 'zh-CN');
      } else if (savedFont === 'traditional') {
        document.documentElement.setAttribute('lang', 'zh-TW');
      } else if (savedFont === 'english') {
        document.documentElement.setAttribute('lang', 'en');
      }
      
      // 更新語言選擇
      updateLanguageSelection(savedFont);
      
      // 應用語言設置到整個應用
      applyFontSetting(savedFont);
      
      // 初始化滑輪位置
      updatePickerPosition();
      
      // 打開彈窗
      fontSetting.addEventListener('click', function() {
        fontModal.classList.add('active');
        // 重新檢查當前選擇的語言
        const currentLang = localStorage.getItem('systemLang') || 'traditional';
        updateLanguageSelection(currentLang);
        updatePickerPosition();
      });
      
      // 關閉彈窗
      modalClose.addEventListener('click', function() {
        fontModal.classList.remove('active');
      });
      
      modalCancel.addEventListener('click', function() {
        fontModal.classList.remove('active');
      });
      
      // 確認選擇
      modalConfirm.addEventListener('click', function() {
        const selectedLang = pickerItems[currentIndex].getAttribute('data-lang');
        
        // 更新顯示的語言名稱
        updateLanguageDisplay(selectedLang);
        
        // 保存語言設置到本地存儲
        localStorage.setItem('systemLang', selectedLang);
        
        // 應用語言設置
        applyFontSetting(selectedLang);
        
        // 關閉彈窗
        fontModal.classList.remove('active');
      });
      
      // 滑輪觸摸事件
      pickerWheel.addEventListener('touchstart', function(e) {
        startY = e.touches[0].clientY;
        startTime = Date.now();
        lastMoveY = 0;
        velocityY = 0;
        isScrolling = true;
        
        if (animationId) {
          cancelAnimationFrame(animationId);
          animationId = null;
        }
        
        this.classList.add('dragging');
        this.classList.remove('with-inertia');
        this.style.transition = 'none';
      });
      
      pickerWheel.addEventListener('touchmove', function(e) {
        if (!isScrolling) return;
        
        e.preventDefault();
        const currentY = e.touches[0].clientY;
        moveY = currentY - startY;
        
        // 計算速度
        const now = Date.now();
        const dt = now - startTime;
        if (dt > 0) {
          velocityY = (moveY - lastMoveY) / dt;
        }
        
        lastMoveY = moveY;
        startTime = now;
        
        const currentTranslateY = getPickerTranslateY();
        const newTranslateY = currentTranslateY + moveY;
        
        // 添加阻尼效果，防止過度滑動
        const maxTranslateY = 50; // 第一個選項居中
        const minTranslateY = -50; // 最後一個選項居中，限制為三個選項
        
        let finalTranslateY = newTranslateY;
        
        if (newTranslateY > maxTranslateY) {
          finalTranslateY = maxTranslateY + (newTranslateY - maxTranslateY) * 0.3;
        } else if (newTranslateY < minTranslateY) {
          finalTranslateY = minTranslateY + (newTranslateY - minTranslateY) * 0.3;
        }
        
        this.style.transform = `translateY(${finalTranslateY}px)`;
        startY = currentY;
      });
      
      pickerWheel.addEventListener('touchend', function() {
        if (!isScrolling) return;
        isScrolling = false;
        
        this.classList.remove('dragging');
        
        // 應用慣性滑動
        if (Math.abs(velocityY) > 0.1) {
          this.classList.add('with-inertia');
          applyInertia(velocityY);
        } else {
          this.style.transition = 'transform 0.3s ease';
          snapToItem();
        }
      });
      
      // 慣性滑動
      function applyInertia(velocity) {
        const deceleration = 0.0015;
        const direction = velocity > 0 ? 1 : -1;
        let distance = 0;
        let duration = Math.abs(velocity / deceleration);
        
        // 計算慣性滑動的距離
        distance = (velocity * velocity) / (2 * deceleration) * direction;
        
        const currentTranslateY = getPickerTranslateY();
        let targetTranslateY = currentTranslateY + distance;
        
        // 限制範圍，確保只有三個選項
        const maxTranslateY = 50;
        const minTranslateY = -50; // 限制為三個選項
        
        if (targetTranslateY > maxTranslateY) {
          targetTranslateY = maxTranslateY;
        } else if (targetTranslateY < minTranslateY) {
          targetTranslateY = minTranslateY;
        }
        
        // 使用CSS動畫實現慣性效果
        this.style.transition = `transform ${Math.min(duration, 1)}s cubic-bezier(0.23, 1, 0.32, 1)`;
        this.style.transform = `translateY(${targetTranslateY}px)`;
        
        // 動畫結束後對齊到最近的選項
        setTimeout(() => {
          this.style.transition = 'transform 0.3s ease';
          snapToItem();
        }, Math.min(duration, 1) * 1000);
      }
      
      // 對齊到最近的選項
      function snapToItem() {
        const itemHeight = 50;
        const currentTranslateY = getPickerTranslateY();
        const targetIndex = Math.round(currentTranslateY / itemHeight) * -1 + 1;
        
        // 限制索引範圍在0-2之間，確保只有三個選項
        currentIndex = Math.max(0, Math.min(pickerItems.length - 1, targetIndex));
        
        // 確保不會超出三個選項的範圍
        if (currentIndex < 0) currentIndex = 0;
        if (currentIndex > 2) currentIndex = 2;
        
        updatePickerPosition();
      }
      
      // 更新語言選擇狀態
      function updateLanguageSelection(langType) {
        pickerItems.forEach((item, index) => {
          if (item.getAttribute('data-lang') === langType) {
            currentIndex = index;
          }
        });
        updateLanguageDisplay(langType);
      }
      
      // 更新顯示的語言名稱
      function updateLanguageDisplay(langType) {
        if (langType === 'simplified' || langType === 'zh-CN') {
          currentFont.textContent = '简体中文';
        } else if (langType === 'traditional' || langType === 'zh-TW') {
          currentFont.textContent = '繁體中文';
        } else if (langType === 'english' || langType === 'en') {
          currentFont.textContent = 'English';
        }
      }
      
      // 應用語言設置到整個應用的函數
      function applyFontSetting(langType) {
        const htmlElement = document.documentElement;
        let langCode = '';
        
        if (langType === 'simplified' || langType === 'zh-CN') {
          htmlElement.setAttribute('lang', 'zh-CN');
          langCode = 'zh-CN';
          langType = 'simplified';
        } else if (langType === 'traditional' || langType === 'zh-TW') {
          htmlElement.setAttribute('lang', 'zh-TW');
          langCode = 'zh-TW';
          langType = 'traditional';
        } else if (langType === 'english' || langType === 'en') {
          htmlElement.setAttribute('lang', 'en');
          langCode = 'en';
          langType = 'english';
        }
        
        // 設置當前語言屬性
        htmlElement.setAttribute('data-current-lang', langType);
        
        // 保存到systemLang
        localStorage.setItem('systemLang', langType);
        
        // 這裡可以添加更多的語言應用邏輯
        document.body.classList.remove('font-simplified', 'font-traditional', 'font-english');
        document.body.classList.add('font-' + langType);
        
        // 更新頁面上的文本
        updatePageLanguage(langType);
        
        // 更新圖標字體
        updateIconFonts(langType);
      }
      
      // 更新圖標字體
      function updateIconFonts(langType) {
        // 獲取所有圖標元素
        const icons = document.querySelectorAll('i.fas, i.far, i.fab');
        
        // 根據語言類型設置適當的字體
        if (langType === 'simplified') {
          icons.forEach(icon => {
            icon.style.fontFamily = '"Font Awesome 6 Free", "微软雅黑", "Microsoft YaHei", sans-serif';
          });
        } else if (langType === 'traditional') {
          icons.forEach(icon => {
            icon.style.fontFamily = '"Font Awesome 6 Free", "微軟正黑體", "Microsoft JhengHei", sans-serif';
          });
        } else if (langType === 'english') {
          icons.forEach(icon => {
            icon.style.fontFamily = '"Font Awesome 6 Free", "Arial", sans-serif';
          });
        }
      }
      
      // 獲取滑輪當前位置
      function getPickerTranslateY() {
        const transform = pickerWheel.style.transform;
        if (!transform || transform === 'none') return 0;
        const match = transform.match(/translateY\(([^)]+)\)/);
        return match ? parseFloat(match[1]) : 0;
      }
      
      // 更新滑輪位置
      function updatePickerPosition() {
        const itemHeight = 50;
        const translateY = (1 - currentIndex) * itemHeight;
        pickerWheel.style.transform = `translateY(${translateY}px)`;
        
        // 更新選中項樣式
        pickerItems.forEach((item, index) => {
          if (index === currentIndex) {
            item.classList.add('active');
          } else {
            item.classList.remove('active');
          }
        });
      }
      
      // 獲取年級滑輪當前位置
      function getGradePickerTranslateY() {
        const transform = gradePickerWheel.style.transform;
        if (!transform || transform === 'none') return 0;
        const match = transform.match(/translateY\(([^)]+)\)/);
        return match ? parseFloat(match[1]) : 0;
      }
      
      // 更新頁面語言
      function updatePageLanguage(lang) {
        let langKey = lang;
        
        // 轉換語言代碼為翻譯鍵
        if (lang === 'zh-CN') langKey = 'simplified';
        else if (lang === 'zh-TW') langKey = 'traditional';
        else if (lang === 'en') langKey = 'english';
        
        // 設置當前語言
        document.documentElement.setAttribute('lang', lang === 'simplified' || lang === 'zh-CN' ? 'zh-CN' : 
                                                    lang === 'traditional' || lang === 'zh-TW' ? 'zh-TW' : 'en');
        
        // 更新所有帶有data-lang-key屬性的元素
        document.querySelectorAll('[data-lang-key]').forEach(el => {
          const key = el.getAttribute('data-lang-key');
          if (translations[langKey] && translations[langKey][key]) {
            if (el.tagName === 'INPUT' && el.getAttribute('type') === 'text') {
              el.setAttribute('placeholder', translations[langKey][key]);
            } else if (el.tagName === 'SPAN' || el.tagName === 'DIV' || el.tagName === 'BUTTON' || el.tagName === 'LABEL' || el.tagName === 'OPTION') {
              // 對於滑動提示，只更新span部分
              if (el.classList.contains('scroll-hint')) {
                const span = el.querySelector('span');
                if (span) {
                  span.textContent = translations[langKey][key];
                }
              } else {
                el.textContent = translations[langKey][key];
              }
            }
          }
        });
        
        // 更新年級顯示
        const savedGrade = localStorage.getItem('appGrade') || 'p3';
        const gradeKey = `grade_${savedGrade}`;
        const currentGradeDisplay = document.querySelector('.item-value[data-lang-key^="grade_"]');
        
